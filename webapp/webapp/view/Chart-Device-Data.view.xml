<mvc:View
	controllerName="iothackathon.webapp.controller.Chart-Device-Data"
	xmlns="sap.suite.ui.commons"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout">
	<layout:Splitter width="100%" height="100%">
		<layout:contentAreas>
			<ChartContainer
				id="chartContainer"
				showFullScreen="true"
				showPersonalization="false"
				autoAdjustHeight="false"
				personalizationPress="attachPersonalizationPress"
				contentChange="attachContentChange"
				title="Revenue">
				<content>
					<ChartContainerContent
						icon="sap-icon://line-chart"
						title="Line Chart">
						<content>
							<viz:VizFrame id="chartContainerVizFrame" height="700px" width="100%"
							              uiConfig="{applicationSet:'fiori'}"></viz:VizFrame>
						</content>
					</ChartContainerContent>
				</content>
			</ChartContainer>
		</layout:contentAreas>
	</layout:Splitter>
</mvc:View>